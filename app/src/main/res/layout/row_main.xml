<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <TextView
            android:id="@+id/row_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Комната"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_type"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="6 0000 т.р."
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:drawableStart="@drawable/ic_walk"
            android:layout_marginTop="5dp"
            android:id="@+id/row_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="пш. 750 м" />


        <TextView
            android:drawableStart="@drawable/ic_train"
            android:id="@+id/row_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_distance"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:text="ст. Восстания" />


        <com.glide.slider.library.SliderLayout
            android:id="@+id/row_image_slider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:src="@android:color/black" />



        <TextView
            android:drawableStart="@drawable/ic_location"
            android:id="@+id/row_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/row_image_slider"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-30dp"
            android:text="Яхтенная ул., 9к1"
            android:textColor="@android:color/white" />


        <ImageView
            android:id="@+id/row_share"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_share"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
